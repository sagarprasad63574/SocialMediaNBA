{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 5,
            "maxLength": 30
        },
        "biography": {
            "type": "string",
            "minLength": 1
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "email": {
            "type": "string",
            "minLength": 5,
            "maxLength": 30,
            "format": "email"
        }
    },
    "additionalProperties": false,
    "required": [
        "username",
        "biography",
        "name",
        "email"
    ]
}